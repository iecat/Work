@{
    ViewBag.Title = "Home Page";
}
@model eStore.Models.HomeView
          
<div id="adbox">
    <div id="search">
        <h3>Quick Search</h3>
        <p>
            Lorem ipsum dolor sit amet, consec tetur adipiscing elit, Praesent diam odio, commodo vittae sagittis vel,
        </p>
        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
            <ul>
                <li>
                    @Html.DropDownList("Search_Cat", "Search by Category")
                </li>
                <li>
                    <select id="brand">
                        <option>Search by Brand</option>
                        @foreach (var b in Model.Brands)
                        {
                            <option>@b.Name</option>
                        }
                    </select>
                </li>
                @*<li>
                    <select id="color">
                        <option>Search by Brand</option>
                    </select>
                </li>
                <li>
                    <select id="style">
                        <option>Search by Style</option>
                    </select>
                </li>*@
            </ul>
            <input type="submit" value="Find!" class="button">
        }      
    </div>  

    <img src="../content/images/shop-now.jpg" height="355" width="618" alt="Promo"> <a href="index.html" class="button"></a> <span></span>
</div>
<div id="main">
    <div id="featured">
        <h4><span>Featured Items</span></h4>
        <ul class="items">
            @foreach (var item in Model.FeaturedProducts)
            {
                <li>
                    <a href="@Url.Action("Index", "Product", new {id= item.ID})">
                        <img alt="logo" src="@item.ImageURL" />
                        <span>@item.Price.PriceValue</span>
                        @item.Name
                    </a>
                </li>
            }

        </ul>
    </div>
    <div id="sale">
        <h4><span>Sale Items</span></h4>
        <ul class="items">
            @foreach (var item in Model.SalesProducts)
            {
                <li>
                    <a href="@Url.Action("Index", "Product", new {id= item.ID})">
                        <img alt="logo" src="@item.ImageURL" />
                        <span>@item.Price.PriceValue</span>
                        @item.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div>