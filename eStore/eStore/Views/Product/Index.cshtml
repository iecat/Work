@{
    ViewBag.Title = "Product";
}
@model eStore.Models.ProductDetailsView


<div id="product">
    <div class="section">
        <ul id="prodThumbnail">
            @foreach (var p in Model.Product.ProductImages)
            {
                <li>
                    <a><img src="@p.ImageUrl" alt="thumbnail" onclick="imageClick(this)"></a>
                </li>
            }
        </ul>
        <div>
            <img src="../../content/images/leather-boots2.jpg" alt="view" id="mainImg">
        </div>
    </div>
    <div class="section">
        <h2><span>@Model.Product.Price.PriceValue</span>@Model.Product.Name</h2>
        <p>
            @Model.Product.Description
        </p>
        @using (Html.BeginForm("AddToCart", "Cart", new {id= Model.Product.ID }))
        {
            <select>
                <option>Select Size</option>
            </select>
            <select>
                <option>Select Qty.</option>
            </select>
            <input type="submit" value="Add to Cart" class="btn-cart">
            <input type="submit" value="Add to Wishlist">

        }
